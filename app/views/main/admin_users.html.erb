<div id="wrapper">
    <%= render partial: "static/header" %>
    <div id="page-wrapper" style="heigth:100%;">
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Admin <small>Users Overview</small>
                    </h1>
                </div>
            </div>
            <!-- /.row -->

            <% if @user.email == ENV['ADMIN_EMAIL'] %>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> All Users </h3>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th>User Id</th>
                                            <th>Email</th>
                                            <th>Firstname</th>
                                            <th>Lastname</th>
                                            <th>Active</th>
                                            <th>Upload</th>
                                            <th>Download</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% row_no = 0 %>
                                        <% @users.each do |u| %>
                                            <% if row_no%2==0 %>
                                            <tr>
                                            <% else%>
                                            <tr class="alternate-row">
                                            <% end %>
                                            <% row_no+=1 %>
                                                <td><%= u.id %></td>
                                                <td><%= u.email %></td>
                                                <td><%= u.firstname %></td>
                                                <td><%= u.lastname %></td>
                                                <td><%= u.active %></td>
                                                <td><% if u.ss_upload.nil? %> 0 <% else %><%= (u.ss_upload/1024.0/1024.0).round(4) %><% end %> MB</td>
                                                <td><% if u.ss_download.nil? %> 0 <% else %><%= (u.ss_download/1024.0/1024.0).round(4) %><% end %> MB</td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <% end %>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->
