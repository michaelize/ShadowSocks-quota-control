<div id="wrapper">
    <%= render partial: "static/header" %>
    <div id="page-wrapper" style="heigth:100%;">
        <div class="container-fluid">

            <!-- Page Heading -->
            <div class="row">
                <div class="col-lg-12">
                    <h1 class="page-header">
                        Activities
                    </h1>
                </div>
            </div>
            <!-- /.row -->
		    

            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3 class="panel-title"><i class="fa fa-bar-chart-o fa-fw"></i> Activity Details </h3>
                        </div>
                        <div class="panel-body">
                            <div class="table-responsive">
                                <table class="table table-bordered table-hover table-striped">
                                    <thead>
                                        <tr>
                                            <th>Start Time</th>
                                            <th>End Time</th>
                                            <th>IP</th>
                                            <th>Quota Used</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% @activities.each do |a| %>
                                            <tr>
                                                <td><%= a.start_time %></td>
                                                <td><%= a.end_time %></td>
                                                <td><%= a.trusted_ip %></td>
                                                <td><% if a.total_used.nil? %> 0 <% else %><%= (a.total_used/1024.0/1024.0).round(4) %><% end %> MB</td>
                                            </tr>
                                        <% end %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!-- /.row -->

        </div>
        <!-- /.container-fluid -->

    </div>
    <!-- /#page-wrapper -->

</div>
<!-- /#wrapper -->